<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/fragmentDatesList">

    <fragment
        android:id="@+id/fragmentDatesList"
        android:name="com.emikhalets.datesdb.view.DatesListFragment"
        android:label="FragmentDatesList"
        tools:layout="@layout/fragment_dates_list">
        <action
            android:id="@+id/action_fragmentDatesList_to_fragmentDateItem"
            app:destination="@id/fragmentDateItem" />
        <action
            android:id="@+id/action_fragmentDatesList_to_fragmentDateEdit"
            app:destination="@id/fragmentDateEdit" />
    </fragment>

    <fragment
        android:id="@+id/fragmentDateItem"
        android:name="com.emikhalets.datesdb.view.DateItemFragment"
        android:label="FragmentDateItem"
        tools:layout="@layout/fragment_date_item">
        <argument
            android:name="id"
            android:defaultValue="-1L"
            app:argType="long" />
        <action
            android:id="@+id/action_fragmentDateItem_to_fragmentDateEdit"
            app:destination="@id/fragmentDateEdit" />
    </fragment>

    <fragment
        android:id="@+id/fragmentDateEdit"
        android:name="com.emikhalets.datesdb.view.DateEditFragment"
        android:label="FragmentDateEdit"
        tools:layout="@layout/fragment_date_edit">
        <argument
            android:name="id"
            app:argType="long"
            android:defaultValue="-1L" />
        <action
            android:id="@+id/action_fragmentDateEdit_to_datePickerDialog"
            app:destination="@id/datePickerDialog" />
        <action
            android:id="@+id/action_fragmentDateEdit_to_typesDialog"
            app:destination="@id/typesDialog" />
    </fragment>

    <dialog
        android:id="@+id/addTypeDialog"
        android:name="com.emikhalets.datesdb.view.AddTypeDialog"
        android:label="AddTypeDialog"
        tools:layout="@layout/dialog_add_type" />

    <fragment
        android:id="@+id/datePickerDialog"
        tools:layout="@layout/dialog_date_picker"
        android:name="com.emikhalets.datesdb.view.DatePickerDialog"
        android:label="DatePickerDialog" />

    <fragment
        android:id="@+id/typesDialog"
        tools:layout="@layout/dialog_types"
        android:name="com.emikhalets.datesdb.view.TypesDialog"
        android:label="TypesDialog" >
        <action
            android:id="@+id/action_typesDialog_to_addTypeDialog"
            app:destination="@id/addTypeDialog" />
    </fragment>
</navigation>